<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Wallpaper, Add Picture</title>
</head>
<body class="container">
<% include nav %>
<h1><%=title%></h1>
<div class="container">

    <form method="post" action="/updateStudent" enctype="application/x-www-form-urlencoded">
        <div class="mb-3">
            <label for="fid" class="form-label">Student ID</label>
            <input name="_id" class="form-control" placeholder="Drop an id student you want to change here">
        </div>
        <div class="mb-3">
            <label for="fname" class="form-label">Student Name</label>
            <input name="tenSVMoi" type="text" minlength="7" class="form-control">
        </div>
        <div class="mb-3">
            <label for="femail" class="form-label">Email</label>
            <input name="emailSVMoi" type="email" minlength="7" class="form-control">
        </div>
        <div class="mb-3">
            <label for="fdiachi" class="form-label">Address</label>
            <input name="diaChiMoi" type="text" minlength="7" class="form-control">
        </div>
        <div class="mb-3">
            <label for="fkhoa" class="form-label">School Year</label>
            <input name="khoaMoi" type="number" min="7" class="form-control">
        </div>
        <button type="submit">Save</button>
        <h1><%=message%></h1>
    </form>

</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

    <% for (var i = 0; i < data.length; i++) { %>
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p class="card-text">Name: <%= data[i].tenSV %></p>
                    <p class="card-text">Email: <%= data[i].emailSV %></p>
                    <p class="card-text">Address: <%= data[i].diaChi %></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">ID: <%= data[i]._id %></small>
                        <small class="text-muted">Year: <%= data[i].khoa %></small>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

</div>
</div>

<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

